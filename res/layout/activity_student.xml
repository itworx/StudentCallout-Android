<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.itworx.tk.studentcallout.StudentActivity" xmlns:app="http://schemas.android.com/apk/res/com.itworx.tk.studentcallout">

    <!-- <ImageView android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:src="@drawable/example" 
        android:id="@+id/imageViewStudent"
        /> -->
	<com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageViewStudent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/example"
        app:border_color="#5fbc39"
        app:border_width="2dp"
        
        android:layout_centerInParent="true"
        app:shadow="false" />    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:gravity="bottom"
        android:id="@+id/textViewStudent"
         />
    
    <Button android:id="@+id/buttonCardNext"
    android:layout_width="fill_parent"
    android:gravity="bottom"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="@string/button_next" />

</RelativeLayout>