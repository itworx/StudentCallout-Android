<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:allowSingleTap">true</item>
    </style>

    <!-- ACTION BAR -->

    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:backgroundStacked">@color/white</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="android:actionBarTabTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="android:actionMenuTextColor">@color/light_green</item>
        <item name="android:itemTextAppearance">@color/light_green</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_green</item>
    </style>

    <style name="Theme.Example" parent="android:Theme.Holo.Light">
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="android:actionBarTabTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:actionBarItemBackground">@drawable/action_background</item>
    </style>

</resources>